		ОбластьЗадача.Параметры.Номер			= СоответствиеРезультата["Номер"];
		ОбластьЗадача.Параметры.Представление	= СоответствиеРезультата["Представление"];
		ОбластьЗадача.Параметры.Результат		= СоответствиеРезультата["Результат"];
		Результат.Вывести(ОбластьЗадача);
	КонецЦикла;    
	
	Возврат Результат;
	
